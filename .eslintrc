{
    "extends": ["standard"],
    "parser": "babel-eslint",
    "parserOptions": {
      "ecmaVersion": 7,
      "sourceType": "module",
      "allowImportExportEverywhere": true
    },
    "rules":{
      "semi": "off",
      "space-before-function-paren": "off",
      "padded-blocks": ["error", "never"]
    },
    "globals": {
      "saasplat":{},
      "think":{},
      "describe":{},
      "it":{}
    }
}
